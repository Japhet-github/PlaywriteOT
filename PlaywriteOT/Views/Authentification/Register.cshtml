
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- <h1>Register</h1> -->

<!-- Register -->
<div id="register">
    <form action="#" method="post">
        <h3 class="title-big">Register</h3>
        <div class="log-container">
            <p>Please fill in this form to create an account.</p>
            <hr>
        </div>

        <div class="log-container">
            <label for="fname"><b>Name</b></label>
            <input type="text" placeholder="Enter First Name" name="fname" required>

            <label for="lname"><b>Name</b></label>
            <input type="text" placeholder="Enter Last Name" name="lname" required>

            <label for="emailAddress"><b>Email Address</b></label>
            <input type="text" placeholder="Enter Email address" name="emailAddress" required>

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Password" name="psw" required>

            <label for="psw-confirm"><b>Confirm Password</b></label>
            <input type="password" placeholder="Confirm Password" name="psw-confirm" required>

            <p>By creating an account you agree to our 
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Terms & Privacy</a>.</p>
            <button type="submit">Register</button>

            <!--
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
            -->
            <!-- <button type="button" class="cancelbtn">Cancel</button> -->

            <span class="psw">Already have an account? 
            <a asp-area="" asp-controller="Authentigication" asp-action="Login">Login Here.</a></span>

        </div>
    </form>
</div>

